<?xml version="1.0" encoding="utf-8"?>

<LinearLayout 
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content" android:gravity="center|top">

	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:gravity="left">
		
		<LinearLayout

			android:layout_marginLeft="10.0dip"
			android:adjustViewBounds="true"
			android:background="@drawable/blue_frame"
			android:orientation="horizontal"
			android:layout_width="58.0dip"
			android:layout_height="58.0dip" android:gravity="center"
			android:onClick="communityimage">
	
			<ImageView
				android:id="@id/create_community_image" 
				android:adjustViewBounds="true"
				android:minHeight="50.0dip"
				android:minWidth="50.0dip"
				android:maxWidth="50.0dip"
				android:maxHeight="50.0dip"
				android:layout_width="50.0dip" 
				android:layout_height="50.0dip"
				android:gravity="center"/>			
		</LinearLayout>

	</LinearLayout>
	
	<LinearLayout
		android:layout_marginTop="2.0dip"
		android:background="@drawable/line"
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:gravity="center">
	</LinearLayout>
		
	<LinearLayout
		android:layout_marginTop="2.0dip"
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:gravity="center">
			
		<TextView
			android:layout_width="120.0dip"
			android:layout_height="wrap_content"
			android:layout_marginLeft="5.0dip"
			android:text="Name:"
			android:gravity="left"
			style="@style/PVC.style_04" />
				
		<EditText
			android:id="@id/create_community_name"
			android:layout_width="180.0dip"
			android:layout_height="40.0dip"/>
						
	</LinearLayout>
		
	<LinearLayout
		android:layout_marginTop="2.0dip"
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:gravity="center">
			
		<TextView
			android:layout_width="120.0dip"
			android:layout_height="wrap_content"
			android:layout_marginLeft="5.0dip"
			android:text="Community Message:"
			android:gravity="left"
			style="@style/PVC.style_04" />
				
		<EditText
		    android:id="@id/create_community_description"
		    android:layout_width="180.0dip"
		    android:layout_height="70dip" />
	
	</LinearLayout>
					
	<LinearLayout
		android:gravity="center"
		android:orientation="horizontal"
		android:padding="0.0dip" 
		android:layout_width="wrap_content"
		android:layout_height="wrap_content">
			
		<TextView
			android:layout_width="fill_parent"
			android:layout_height="15.0dip"
			android:text="                           200 characters Maximum"
			android:gravity="center"
			style="@style/PVC.style_03" />
	</LinearLayout>			
		
	<LinearLayout
		android:layout_marginTop="5.0dip"
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:gravity="center">			
			
		<TextView
			android:layout_width="120.0dip"
			android:layout_height="wrap_content"
			android:layout_marginLeft="5.0dip"
			android:text="Category:"
			android:gravity="left"
			style="@style/PVC.style_04" />
			
		<Spinner android:id="@id/create_community_category"
    		android:layout_width="180.0dip"
    		android:layout_height="40.0dip" />	
	
	</LinearLayout>
	
	<LinearLayout
		android:layout_marginTop="5.0dip"
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:gravity="center">			
			
		<TextView
			android:layout_width="120.0dip"
			android:layout_height="wrap_content"
			android:layout_marginLeft="5.0dip"
			android:text="Interest:"
			android:gravity="left"
			style="@style/PVC.style_04" />
			
		<Spinner android:id="@id/create_community_interest"
    		android:layout_width="180.0dip"
    		android:layout_height="40.0dip" />	
	
	</LinearLayout>
	
	<LinearLayout
		android:layout_marginTop="5.0dip"
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:gravity="center">			
			
		<TextView
			android:layout_width="120.0dip"
			android:layout_height="wrap_content"
			android:layout_marginLeft="5.0dip"
			android:text="Preference:"
			android:gravity="left"
			style="@style/PVC.style_04" />
			
		<Spinner android:id="@id/create_community_preference"
    		android:layout_width="180.0dip"
    		android:layout_height="40.0dip" />	
	
	</LinearLayout>
			
	<LinearLayout
		android:layout_marginTop="5.0dip"
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:gravity="center">
			
		<TextView
			android:layout_width="120.0dip"
			android:layout_height="wrap_content"
			android:layout_marginLeft="5.0dip"
			android:text="  Visibility:"
			android:gravity="left"
			style="@style/PVC.style_04" />
		
		<LinearLayout
			android:layout_marginTop="5.0dip"
			android:orientation="vertical"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:gravity="center">
				
			<RadioGroup android:id="@id/create_community_radio_group"
    			android:orientation="vertical"
    			android:layout_width="fill_parent"
    			android:layout_height="fill_parent" >

    			<RadioButton android:id="@id/create_community_radio_public_visibility"
    			    android:checked="true"
        			android:layout_width="100dip"
        			android:layout_height="40dip"
        			android:text="Public" 
        			style="@style/PVC.style_04"
        			/>
 
    			<RadioButton android:id="@id/create_community_radio_private_visivility"
        			android:layout_width="100dip"
        			android:layout_height="40dip"
        			android:text="Private" 
        			style="@style/PVC.style_04"/>
 
 			</RadioGroup>
		</LinearLayout>			
	</LinearLayout>
	       
	<LinearLayout
		android:layout_marginTop="5.0dip"
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:gravity="center">

		<TextView
			android:layout_width="120.0dip"
			android:layout_height="wrap_content"
			android:layout_marginLeft="5.0dip"
			android:text="  Recommend Community:"
			android:gravity="left"
			style="@style/PVC.style_04" />
	
		<LinearLayout
			android:layout_marginTop="5.0dip"
			android:orientation="vertical"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:gravity="center">
				
			<RadioGroup android:id="@id/create_community_radio_group2"
    			android:orientation="vertical"
    			android:layout_width="fill_parent"
    			android:layout_height="fill_parent" >
 
    			<RadioButton
    			    android:id="@id/create_community_radio_automatic"
    			    style="@style/PVC.style_04"
    			    android:layout_width="130dip"
    			    android:layout_height="40dip"
    			    android:checked="true"
    			    android:text="Automatic" />
 
    			<RadioButton
    			    android:id="@id/create_community_radio_static"
    			    style="@style/PVC.style_04"
    			    android:layout_width="130dip"
    			    android:layout_height="40dip"
    			    android:text="Static" />
 
 			</RadioGroup>
		</LinearLayout>			
	</LinearLayout>    
	    
	    
	    
	    
	    
	    
	    
	    
	    
	    
	    
	    
	    
	    
	    
	    
	    
	    
	    
	    
	    
	    
	    
	    
	    
	    
	    
	    
	    
	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:gravity="right" android:layout_marginTop="15.0dip">
				
		<Button
			android:id="@id/create_community_save"
			android:layout_width="100.0dip"
			android:layout_height="40.0dip"
			android:text="Save"
			
		/>
		
		<Button
			android:id="@id/create_community_cancel"
			android:layout_width="100.0dip"
			android:layout_height="40.0dip"
			android:text="Cancel"
		/>

			
	</LinearLayout>
</LinearLayout>
