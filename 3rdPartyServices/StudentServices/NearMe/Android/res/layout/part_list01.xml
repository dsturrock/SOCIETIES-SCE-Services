<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	android:adjustViewBounds="true"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:padding="0.0dip" 
	android:layout_width="fill_parent"
	android:layout_height="60.0dip"
	android:gravity="center"
	android:layout_marginLeft="2.0dip"
	android:layout_marginTop="10.0dip"
	android:onClick="PartList01"
	android:background="@drawable/part_list01">
	
	<LinearLayout 
	android:id="@id/part_list01_layout"
	android:orientation="vertical"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content" android:gravity="center"
	android:onClick="PartList01"
	android:background="@drawable/part_list01"
	>
				
		<LinearLayout
			android:gravity="center"
			android:orientation="horizontal"
			android:padding="0.0dip" 
			android:layout_width="wrap_content"
			android:layout_height="wrap_content">
			
		<LinearLayout
			android:adjustViewBounds="true"
			android:background="@drawable/blue_frame"
			android:gravity="center"
			android:layout_width="44.0dip"
			android:layout_height="44.0dip">
		
			<ImageView
				android:id="@id/part_list01_image" 
				android:adjustViewBounds="true"
				android:minHeight="40.0dip"
				android:minWidth="40.0dip"
				android:maxWidth="40.0dip"
				android:maxHeight="40.0dip"
				android:layout_width="40.0dip" 
				android:layout_height="40.0dip"
				/>
		</LinearLayout>		
			<ImageView
				android:id="@id/part_list_01_status"
				android:layout_marginRight="4.0dip"
				android:layout_marginLeft="4.0dip"
				android:adjustViewBounds="true"
				android:layout_width="24.0dip" 
				android:layout_height="24.0dip"
			/>     		

			<TextView
				android:id="@id/part_list_01_user_name"
				android:layout_width="190.0dip"
				android:layout_height="wrap_content"
				android:layout_marginLeft="2.0dip"
				android:text="@string/list_member_text_01"
				android:gravity="left"
				style="@style/PVC.style_04" />
			
			<LinearLayout
				android:gravity="center"
				android:orientation="horizontal"
				android:padding="0.0dip" 
				android:layout_width="40.0dip"
				android:layout_height="40.0dip">
			<TextView
			android:background="@drawable/yellow_circle"
				android:id="@id/part_list_01_new_message"
				android:layout_width="30.0dip"
				android:layout_height="30.0dip"
				android:text="@string/list_member_text_02"
				android:gravity="center"
				style="@style/PVC.style_05" />
			</LinearLayout>
			
		</LinearLayout>	
		<LinearLayout
		android:layout_marginTop="4.0dip"
			android:gravity="center"
			android:orientation="horizontal"
			android:padding="0.0dip" 
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@drawable/line">			
		</LinearLayout>		
	</LinearLayout>
</LinearLayout>