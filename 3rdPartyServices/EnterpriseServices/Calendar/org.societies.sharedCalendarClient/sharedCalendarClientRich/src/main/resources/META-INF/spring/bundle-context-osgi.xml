<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:osgi="http://www.springframework.org/schema/osgi"
	xmlns:osgi-compendium="http://www.springframework.org/schema/osgi-compendium"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
                      http://www.springframework.org/schema/osgi http://www.springframework.org/schema/osgi/spring-osgi.xsd
                      http://www.springframework.org/schema/context 
    				  http://www.springframework.org/schema/context/spring-context-2.5.xsd
                      http://www.springframework.org/schema/osgi-compendium 
                      http://www.springframework.org/schema/osgi-compendium/spring-osgi-compendium-1.2.xsd"
	xmlns:context="http://www.springframework.org/schema/context">

	<!-- definitions using elements of the osgi namespace can be included in 
		this file. There is no requirement to keep these definitions in a separate 
		file if you do not want to. The rationale for keeping these definitions separate 
		is to facilitate integration testing of the bundle outside of an OSGi container -->
	<bean id="sharedCalClientRich"
		class="org.societies.rdpartyService.enterprise.SharedCalendarClientRich"
		init-method="InitService">
		<constructor-arg value="${serverJid}" />
		<constructor-arg value="${jsonFilePath}" />
		<property name="commManager" ref="CommManagerBundle" />
		<!-- <property name="idMgr" ref="IdentityManagerBundle" /> -->
	</bean>


	<context:property-placeholder
		properties-ref="clientProperties" />

	<osgi-compendium:cm-properties id="clientProperties"
		persistent-id="sharedCalClient" />

	<osgi:reference id="CommManagerBundle"
		interface="org.societies.api.comm.xmpp.interfaces.ICommManager"
		cardinality="1..1" />
	<osgi:reference id="eventManager" interface="org.societies.api.osgi.event.IEventMgr"/>
	<!-- <osgi:reference id="IdentityManagerBundle" interface="org.societies.api.identity.IIdentityManager" 
		cardinality="1..1"/> -->

	<osgi:service id="calClientRichInterface" ref="sharedCalClientRich"
		interface="org.societies.rdpartyService.enterprise.interfaces.ISharedCalendarClientRich" />
	<osgi:service id="calClientCommCallback" ref="sharedCalClientRich"
		interface="org.societies.api.comm.xmpp.interfaces.ICommCallback" />
	

	<osgi:service ref="sharedCalendarClient"
		interface="org.societies.rdpartyService.enterprise.interfaces.ISharedCalendarClientRich">
		<osgi:service-properties>
			<entry key="TargetPlatform" value="SOCIETIES" />
			<entry key="ServiceProvider" value="ICT-SOCIETIES" />
<!-- 			<entry key="ServiceMetaModel" value-ref="serMetamodel" /> -->
		</osgi:service-properties>
	</osgi:service>

<!-- 	<bean id="serMetamodel" class="org.societies.api.schema.servicelifecycle.model.Service"> -->
<!-- 		<property name="authorSignature" value="Soluta.Net" /> -->
<!-- 		<property name="serviceDescription" value="Shared Calendar Client Component" /> -->
<!-- 		<property name="serviceName" value="Shared Calendar Client" /> -->
<!-- 	</bean> -->

	<osgi:set id="availableDevicesSet" 
		interface="org.societies.api.css.devicemgmt.IDevice"
		filter="(deviceType=screen)">
		<osgi:listener bind-method="onBind" unbind-method="onUnbind">
        	<bean class="org.societies.rdpartyService.enterprise.ClientDeviceListener"/>
        </osgi:listener>
	</osgi:set>
</beans>
